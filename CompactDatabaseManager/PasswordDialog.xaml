<Window x:Class="CompactDatabaseManager.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompactDatabaseManager"
        mc:Ignorable="d"
        Title="PasswordDialog" Height="120" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Please supply a password" />
        <PasswordBox Margin="5" Grid.Row="1" Name="_passwordBox"/>
        <Button Grid.Row="2" Content="OK" Margin="5" Click="Button_Click" />
    </Grid>
</Window>
